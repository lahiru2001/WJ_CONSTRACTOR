    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lahiru"
        android:id="@+id/username"
        android:textSize="15dp"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2001lahiru123@gmail.com"
        android:id="@+id/email"
        android:textSize="15dp"
